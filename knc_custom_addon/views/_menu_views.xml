<?xml version="1.0" encoding="UTF-8"?>
<odoo> <!-- Code Checked & Confirmed by Panos on ../../2022 -->
    <data>

        <!-- Product Templates All View --> <!-- Checked ../../2022 -->
        <record id="product_templates_all_list" model="ir.ui.view">
            <field name="name">Product Templates All List</field>
            <field name="model">product.template</field>
            <field name="arch" type="xml">
                <tree string="Product Templates All List" multi_edit="1" decoration-success="is_lock==True" default_order="priority desc, name asc">
                    <field name="sequence" widget="handle"/>
                    <field name="id" optional="hide"/>
                    <field name="priority" widget="priority" optional="show" nolabel="1"/>
                    <field name="product_brand_id" string="Brand" optional="show"/>
                    <field name="default_code" optional="show"/>
                    <field name="name" string="Product Name"/>
                    <field name="product_variant_count" string="Var #" optional="show"/>
                    <field name="valid_product_template_attribute_line_ids" string="Attributes #" optional="show"/>
                    <field name="public_categ_ids" widget="many2many_tags" optional="show"/>
                    <field name="accessory_product_ids" widget="many2many_tags" optional="show"/>
                    <field name="alternative_product_ids" widget="many2many_tags" optional="show"/>
                    <field name="barcode" optional="hide" attrs="{'readonly': [('product_variant_count', '&gt;', 1)]}"/>
                    <field name="list_price" string="Sales Price" widget="monetary" options="{'currency_field': 'currency_id'}" optional="hide" decoration-muted="not sale_ok"/>
                    <field name="standard_price" widget="monetary" options="{'currency_field': 'cost_currency_id'}" optional="hide" readonly="1"/>
                    <field name="categ_id" widget="many2one" optional="hide"/>
                    <field name="detailed_type" optional="hide" readonly="1"/>
                    <field name="uom_id" readonly="1" optional="hide" groups="uom.group_uom"/>
                    <field name="sale_ok" invisible="1"/>
                    <field name="type" invisible="1"/>
                    <field name="currency_id" invisible="1"/>
                    <field name="cost_currency_id" invisible="1"/>
                    <field name="active" invisible="1"/>
                    <field name="is_published" string="Publed" widget="boolean_toggle" optional="show"/>
                    <field name="is_lock" widget="boolean_toggle" readonly="1" optional="show"/>
                    <field name="company_id" options="{'no_create_edit': True}" groups="base.group_multi_company" optional="hide"/>
                    <field name="create_uid" widget="many2one_avatar_user" optional="hide"/>
                    <field name="create_date" optional="hide"/>
                    <field name="write_uid" widget="many2one_avatar_user" optional="show"/>
                    <field name="write_date" optional="show"/>
                    <field name="activity_exception_decoration" widget="activity_exception"/>
                </tree>
            </field>
        </record>

        <!-- Product Templates All Action --> <!-- Checked ../../2022 -->
        <record id="product_templates_all_action" model="ir.actions.act_window">
            <field name="name">All Product Templates</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.template</field>
            <field name="view_ids"
                   eval="[(5, 0, 0),
                      (0, 0, {'view_mode': 'tree', 'view_id': ref('product_templates_all_list')}),
                      (0, 0, {'view_mode': 'form'}),
                      (0, 0, {'view_mode': 'kanban'})]"/>
            <field name="context">{}</field>
        </record>


        <!-- Product Variants All View --> <!-- Checked ../../2022 -->
        <record id="product_variants_all_list" model="ir.ui.view">
            <field name="name">Product Variants All List</field>
            <field name="model">product.product</field>
            <field name="arch" type="xml">
                <tree string="Product Variants All List" multi_edit="1" default_order="sequence asc">
                    <field name="sequence" widget="handle"/>
                    <field name="id" optional="hide"/>
                    <field name="priority" widget="priority" nolabel="1" readonly="1"/>
                    <field name="default_code" optional="show" readonly="1"/>
                    <field name="barcode" optional="hide" readonly="1"/>
                    <field name="name" readonly="1"/>
                    <field name="product_template_variant_value_ids" widget="many2many_tags" groups="product.group_product_variant" readonly="1"/>
                    <field name="company_id" groups="base.group_multi_company" optional="hide" readonly="1"/>
                    <field name="lst_price" optional="show" string="Sales Price"/>
                    <field name="standard_price" optional="show"/>
                    <field name="categ_id" optional="hide"/>
                    <field name="type" optional="hide" readonly="1"/>
                    <field name="price" invisible="not context.get('pricelist',False)"/>
                    <field name="uom_id" options="{'no_open': True, 'no_create': True}" groups="uom.group_uom" optional="show" readonly="1"/>
                    <field name="product_tmpl_id" invisible="1" readonly="1"/>
                    <field name="active" invisible="1"/>
                    <field name="is_published" string="Publed" widget="boolean_toggle" optional="show"/>
                    <field name="is_lock" widget="boolean_toggle" readonly="1" optional="show"/>
                    <field name="company_id" options="{'no_create_edit': True}" groups="base.group_multi_company" optional="hide"/>
                    <field name="create_uid" optional="hide"/>
                    <field name="create_date" optional="hide"/>
                    <field name="write_uid" optional="show"/>
                    <field name="write_date" optional="show"/>
                </tree>
            </field>
        </record>

        <!-- Product Variants All Action --> <!-- Checked ../../2022 -->
        <record id="product_variants_all_action" model="ir.actions.act_window">
            <field name="name">All Product Variants</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.product</field>
            <field name="view_ids"
                   eval="[(5, 0, 0),
                      (0, 0, {'view_mode': 'tree', 'view_id': ref('product_variants_all_list')}),
                      (0, 0, {'view_mode': 'form'}),
                      (0, 0, {'view_mode': 'kanban'})]"/>
            <field name="context">{}</field>
        </record>


    </data>
</odoo>