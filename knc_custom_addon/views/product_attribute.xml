    <data>

    <!-- *** Attributes Views --> <!-- Added Missing Default Views & Adjusted Fields -->

        <!-- Attributes List View - Adjusted Fields --> <!-- Checked 17/05/2022 -->
        <record id="product_attributes_list" model="ir.ui.view">
            <field name="name">Attributes List</field>
            <field name="model">product.attribute</field>
            <field name="inherit_id" ref="product.attribute_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="/tree" position="replace">
                    <tree string="Attributes List" multi_edit="1" default_order="sequence asc">
                        <field name="sequence" widget="handle"/>
                        <field name="id" optional="hide"/>
                        <field name="name" optional="show"/>
                        <field name="category_id" optional="show"/>
                        <field name="display_type" optional="show"/>
                        <field name="note" optional="show"/>
                        <field name="prefix" string="Prefix" optional="show"/>
                        <field name="suffix" string="Suffix" optional="show"/>
                        <field name="name_alt" string="Short" optional="show"/>
                        <field name="is_used_desc" string="Description" optional="show"/>
                        <field name="is_related" string="Related" optional="show"/>
                        <field name="is_single_value" string="Single" optional="show"/>
                        <field name="is_float" string="Float" optional="show"/>
                        <field name="is_integer" string="Integer" optional="show"/>
                        <field name="number_related_products" string="Products" optional="show"/>
                        <field name="create_variant" string="Variants" optional="show"/>
                        <field name="visibility" string="Website" optional="hide"/>
                        <field name="attribute_tags_ids" widget="many2many_tags" optional="show"/>
                        <field name="comments" optional="show"/>
                        <field name="create_uid" optional="hide"/>
                        <field name="create_date" optional="hide"/>
                        <field name="write_uid" optional="hide"/>
                        <field name="write_date" optional="hide"/>
                    </tree>
                </xpath>
            </field>
        </record>

        <!-- Attributes Form View - Adjusted Fields --> <!-- Checked ../05/2022 -->
        <record id="product_attribute_addons_view_extend" model="ir.ui.view">
            <field name="name">product.attribute.form</field>
            <field name="model">product.attribute</field>
            <field name="inherit_id" ref="product.product_attribute_view_form"/>
            <field name="arch" type="xml">

                <xpath expr="//group[@name='main_fields']" position="after">
                    <group string="Additional Configuration">
                        <group>
                            <field name="prefix"/>
                            <field name="suffix"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="note"/>
<!--                            <field name="name_alt" attrs="{'readonly': [('create_variant', '!=', 'always')]}"/>-->
                            <field name="name_alt"/>
                            <field name="is_used_desc" widget="boolean_toggle"/>
                        </group>
                    </group>
                    <group string="Advanced Configuration">
                        <group>
                            <field name="is_related" widget="boolean_toggle"/>
                            <field name="is_single_value" widget="boolean_toggle"/>
                            <field name="attribute_tags_ids" widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name="is_float" widget="boolean_toggle" attrs="{'readonly': [('is_integer', '=', True)]}"/>
                            <field name="is_integer" widget="boolean_toggle" attrs="{'readonly': [('is_float', '=', True)]}"/>
                            <field name="comments"/>
                        </group>
                    </group>
                </xpath>

                <xpath expr="//field[@name='value_ids']/tree/field[@name='name']" position="before">
                    <field name="id" optional="hide"/>
                </xpath>

                <xpath expr="//field[@name='value_ids']/tree/field[@name='is_custom']" position="attributes">
                    <attribute name="string">Custom</attribute>
                </xpath>

                <xpath expr="//field[@name='value_ids']/tree/field[@name='html_color']" position="after">
                    <field name="dis_name" readonly="1" force_save="1" optional="show"/>
                    <field name="is_child_float" string="Float" readonly="1" force_save="1" attrs="{'column_invisible': [('parent.is_float', '!=', True)]}"/>
                    <field name="name_float" widget="float" readonly="1" force_save="1" attrs="{'column_invisible': [('parent.is_float', '!=', True)]}"/>
                    <field name="is_child_integer" string="Integer" readonly="1" force_save="1" attrs="{'column_invisible': [('parent.is_integer', '!=', True)]}"/>
                    <field name="name_integer" widget="integer" readonly="1" force_save="1" attrs="{'column_invisible': [('parent.is_integer', '!=', True)]}"/>
                    <field name="is_used_on_products" string="Used" optional="show"/>
                    <field name="create_uid" optional="hide"/>
                    <field name="create_date" optional="hide"/>
                    <field name="write_uid" optional="show"/>
                    <field name="write_date" optional="show"/>
                </xpath>

<!--                <xpath expr="//field[@name='value_ids']/tree" position="replace">-->
