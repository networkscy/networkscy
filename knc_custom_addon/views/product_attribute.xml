        <!-- Attributes Search View - Missing View --> <!-- Checked 17/05/2022 -->
        <record id="product_attributes_search" model="ir.ui.view">
            <field name="name">Attributes Search</field>
            <field name="model">product.attribute</field>
            <field name="arch" type="xml">
                <search string="Attributes Search">
                    <field name="name"/>
                    <field name="category_id"/>
                    <separator/>
                    <filter name="creates_variant" string="Create Variant" domain="[('create_variant','=', 'always')]"/>
                    <filter name="is_related" string="Related Attribute" domain="[('is_related','=', True)]"/>
                    <filter name="is_used_desc" string="Used in Description" domain="[('is_used_desc','=', True)]"/>
                    <filter name="is_float" string="Contain Float Values" domain="[('is_float','=', True)]"/>
                    <filter name="is_integer" string="Contain Integer Values" domain="[('is_integer','=', True)]"/>
                    <filter name="is_single_value" string="Only Single Value Selection" domain="[('is_single_value','=', True)]"/>
                    <separator/>
                    <group expand="0" name="group_by" string="Group By">
                        <filter name="category_id" domain="[]" context="{'group_by':'category_id'}"/>
                        <filter name="display_type" domain="[]" context="{'group_by':'display_type'}"/>
                        <filter name="create_variant" domain="[]" context="{'group_by':'create_variant'}"/>
                        <filter name="visibility" domain="[]" context="{'group_by':'visibility'}" string="eCommerce Filter Visibility"/>
                    </group>
                </search>
            </field>
        </record>


    <!-- *** Attributes Values Views --> <!-- Added Missing Default Views -->

        <!-- Attributes Values List View - Missing View --> <!-- Checked 17/05/2022 -->
        <record id="product_attributes_values_list" model="ir.ui.view">
            <field name="name">product.attribute.value.tree</field>
            <field name="model">product.attribute.value</field>
            <field name="arch" type="xml">
                <tree string="Attributes Values List" default_order="attribute_id asc, sequence asc">
                    <field name="sequence" widget="handle"/>
                    <field name="id" optional="hide"/>
                    <field name="attribute_id" optional="show"/>
                    <field name="name" optional="show"/>
                    <field name="is_child_float" string="Float" optional="show"/>
                    <field name="name_float" widget="float" optional="show"/>
                    <field name="is_child_integer" string="Integer" optional="show"/>
                    <field name="name_integer" widget="integer" optional="show"/>
                    <field name="dis_name" readonly="1" optional="show"/>
                    <field name="display_name" optional="show"/>
                    <field name="pav_attribute_line_ids" readonly="1" optional="show"/>
                    <field name="is_used_on_products" string="Used" optional="show"/>
                    <field name="create_uid" optional="hide"/>
                    <field name="create_date" optional="hide"/>
                    <field name="write_uid" optional="show"/>
                    <field name="write_date" optional="show"/>
                </tree>
            </field>
        </record>

        <!-- Attributes Values Search View - Missing View --> <!-- Checked 17/05/2022 -->
        <record id="product_attributes_values_search" model="ir.ui.view">
            <field name="name">Attributes Values Search</field>
            <field name="model">product.attribute.value</field>
            <field name="arch" type="xml">
                <search string="Attributes Values Search">
                    <field name="name"/>
                    <field name="attribute_id"/>
                    <separator/>
                    <group expand="0" name="group_by" string="Group By">
                        <filter name="attribute_id" domain="[]" context="{'group_by':'attribute_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Attributes Values Types Form View --> <!-- Checked ../../2022 -->
        <record id="product_attributes_values_form" model="ir.ui.view">
            <field name="name">Attributes Values Form</field>
            <field name="model">product.attribute.value</field>
            <field name="arch" type="xml">
                <form string="Attributes Values Form">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" string="Name Value"/>
                                <field name="name_float" widget="float"/>
                                <field name="name_integer" widget="integer"/>
                                <field name="html_color"/>
                            </group>
                            <group>
                                <field name="attribute_id" string="Related Attribute" readonly="1"/>
                                <field name="is_used_on_products"/>
                                <field name="is_child_float" widget="boolean"/>
                                <field name="is_child_integer" widget="boolean"/>
                            </group>
                            <group string="Brand Value Combination">
                                <field name="brand_attr_comb_ids" widget="one2many" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="brand_id"/>
                                    </tree>
                                </field>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Attributes Values Action - Missing View --> <!-- Checked 17/05/2022 -->
        <record id="product_attribute_values_action" model="ir.actions.act_window">
            <field name="name">Attributes Values</field>
            <field name="res_model">product.attribute.value</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>