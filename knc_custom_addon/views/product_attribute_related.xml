<odoo>
    <data>
        <!-- Product Template - Form View --> <!-- Checked 16/05/2022 -->
        <record id="product_variant_addons_view_extend1" model="ir.ui.view">
            <field name="name">product.template.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[@name='variants']/field[@name='attribute_line_ids']" position="after">
                    <separator string="Related Product Attributes"/>
                    <field name="product_variant_ids" widget="one2many" context="{'show_attribute': False}" option="{'no_create_edit':True}" attrs="{'readonly': 1}">
                        <tree create="0" delete="0" default_order="default_code asc">
                            <field name="default_code" readonly="1"/>
                            <field name="product_template_variant_value_ids" widget="many2many_tags"
                                   string="Variant Attribute Values" readonly="1"/>
                            <field name="related_attributes_value_ids" widget="many2many_tags"
                                   string="Related Attribute Values" readonly="1"/>
                            <field name="description" string="Description" readonly="1"/>
                        </tree>
                    </field>
                </xpath>
            </field>
        </record>

    </data>
</odoo>