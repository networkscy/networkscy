        <!-- Contact Relation Type Views --> <!-- Need to Check -->
        <record id="contact_relation_type_form_view_custom" model="ir.ui.view">
            <field name="name">res.partner.relation.type form</field>
            <field name="model">res.partner.relation.type</field>
            <field name="inherit_id" ref="partner_multi_relation.form_res_partner_relation_type"/>
            <field name="arch" type="xml">

                <!-- Fields are hidden for partner category left & right -->
                <xpath expr="//field[@name='partner_category_left']" position="attributes">
                    <attribute name="attrs">{'invisible': 1}</attribute>
                </xpath>
                <xpath expr="//field[@name='partner_category_right']" position="attributes">
                    <attribute name="attrs">{'invisible': 1}</attribute>
                </xpath>
                <!-- End Fields are hidden for partner category left & right -->

                <xpath expr="//group[@name='properties']" position="attributes">
                    <attribute name="attrs">{'invisible': 0}</attribute>
                </xpath>

                <xpath expr="//field[@name='contact_type_left']" position="after">
                    <field name="google_label"/>
                </xpath>

                <xpath expr="//field[@name='contact_type_right']" position="after">
                    <field name="related_google_label"/>
                </xpath>

            </field>
        </record>

        <record id="contact_relation_type_tree_view_custom" model="ir.ui.view">
            <field name="name">res.partner.relation.type tree</field>
            <field name="model">res.partner.relation.type</field>
            <field name="inherit_id" ref="partner_multi_relation.tree_res_partner_relation_type"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='allow_self']" position="attributes">
                    <attribute name="attrs">{'column_invisible': 1}</attribute>
                </xpath>
                <xpath expr="//field[@name='is_symmetric']" position="attributes">
                    <attribute name="attrs">{'column_invisible': 1}</attribute>
                </xpath>

                <xpath expr="//field[@name='contact_type_left']" position="after">
                    <field name="google_label"/>
                </xpath>

                <xpath expr="//field[@name='contact_type_right']" position="after">
                    <field name="related_google_label"/>
                </xpath>

            </field>
        </record>

