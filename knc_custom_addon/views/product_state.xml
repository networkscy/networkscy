<?xml version="1.0" encoding="UTF-8"?>
<odoo> <!-- Code Checked & Confirmed by Panos on ../../2022 -->
    <data>

    <!-- *** Product States Views -->

        <!-- Product States List View --> <!-- Checked 25/06/2022 -->
        <record id="product_states_list" model="ir.ui.view">
            <field name="name">Product States List</field>
            <field name="model">product.states</field>
            <field name="arch" type="xml">
                <tree string="Product States List" default_order="sequence asc">
                    <field name="sequence" widget="handle"/>
                    <field name="id" optional="hide"/>
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <!-- Product States Search View --> <!-- Checked xx/06/2022 -->

        <record model="ir.actions.act_window" id="action_open_state_products">
            <field name="name">State Products</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.template</field>
            <field name="view_mode">kanban,form,tree</field>
            <field name="context">{}</field>
            <field name="domain">[('product_state_id', '=', active_id)]</field>
        </record>

        <!-- Product States Form View --> <!-- Checked xx/06/2022 -->
        <record id="product_states_form" model="ir.ui.view">
            <field name="name">Product States Form</field>
            <field name="model">product.states</field>
            <field name="arch" type="xml">
                <form string="Product States Form">
                    <sheet>
                         <div class="oe_button_box" name="button_box">
                             <button name="%(action_open_state_products)d"
                                     type="action" class="oe_stat_button" icon="fa-cubes">
                            <field name="products_count" widget="statinfo" string="Products"/>
                        </button>
                    </div>
                        <div class="oe_title">
                            <label for="name" string="State Name" class="oe_edit_only"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group string="Description">
                            <field name="description" nolabel="1"/>
                            <field name="default" widget="boolean_toggle"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Product States Kanban View --> <!-- Checked xx/06/2022 -->
        <record id="view_product_state_kanban" model="ir.ui.view">
            <field name="name">product.states.kanban</field>
            <field name="model">product.states</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="id"/>
                    <field name="products_count"/>
                    <field name="description"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <h4>
                                        <field name="name"/>
                                    </h4>



                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Product States Action --> <!-- Checked 25/06/2022 -->
        <record id="product_states_action" model="ir.actions.act_window">
            <field name="name">Product States</field>
            <field name="res_model">product.states</field>
            <field name="view_mode">kanban,tree,form</field>
        </record>


        <record model="ir.ui.view" id="product_state_search_form_view">
            <field name="name">product.states.search.form</field>
            <field name="model">product.states</field>
            <field name="arch" type="xml">
                <search string="Product State">
                    <field name="name"/>
                </search>
            </field>
        </record>


        <record model="ir.actions.act_window" id="action_open_single_product_state">
            <field name="name">Product State</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.states</field>
            <field name="view_mode">kanban,form,tree</field>
            <field name="context">{}</field>
            <field name="domain">[('id', '=', product_state_id)]</field>
            <field name="target">current</field>
        </record>



        <record id="view_product_template_search_state" model="ir.ui.view">
            <field name="name">product.template.search.state</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_search_view"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="product_state_id"/>
                    <filter
                            string="Product State"
                            name="groupby_state"
                            domain="[]"
                            context="{'group_by' : 'product_state_id'}"
                    />
                    <separator/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="product_template_form_view">
            <field name="name">product.template.common.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <header position="inside">
                    <field
                            name="product_state_id"
                            widget="statusbar"
                            options="{'clickable': '1'}"
                    />
                    <field name="state" invisible="1"/>
                </header>
            </field>
        </record>

