<?xml version="1.0" encoding="UTF-8"?>
<odoo> <!-- Code Checked & Confirmed by Panos on ../../2022 -->
    <data>

    <!-- *** Competitor Views -->

        <!-- Competitor List View --> <!-- Checked 28/04/2022 -->
        <record id="competitor_list" model="ir.ui.view">
            <field name="name">Competitor List</field>
            <field name="model">crm.competitor</field>
            <field name="arch" type="xml">
                <tree string="Competitor List" editable="top" multi_edit="1" default_order="sequence asc">
                    <field name="sequence" widget="handle"/>
                    <field name="id" optional="hide"/>
                    <field name="partner_id" options="{'no_create': True}" attrs="{'readonly': [('id', '!=', False)]}" optional="show"/>
                    <field name="name" optional="hide"/>
                    <field name="type" optional="show"/>
                    <field name="brands_ids" widget="many2many_tags" options="{'no_quick_create': True}" optional="show"/>
                    <field name="sectors_ids" widget="many2many_tags" options="{'no_quick_create': True}" optional="show"/>
                    <field name="industries_ids" widget="many2many_tags" options="{'no_quick_create': True}" optional="show"/>
                    <field name="threat" widget="priority" optional="show"/>
                    <field name="notes" optional="show"/>
                    <field name="create_uid" optional="hide"/>
                    <field name="create_date" optional="hide"/>
                    <field name="write_uid" optional="show"/>
                    <field name="write_date" optional="show"/>
                </tree>
            </field>
        </record>

        <!-- Competitor Search View --> <!-- Checked 28/04/2022 -->
        <record id="competitor_search" model="ir.ui.view">
            <field name="name">Competitor Search</field>
            <field name="model">crm.competitor</field>
            <field name="arch" type="xml">
                <search string="Competitor Search">
                    <field name="name"/>
                    <field name="type"/>
                    <field name="brands_ids"/>
                    <field name="sectors_ids"/>
                    <field name="industries_ids"/>
                    <separator/>
                    <group expand="0" name="group_by" string="Group By">
                        <filter name="type" domain="[]" context="{'group_by':'type'}"/>
                        <filter name="brands_ids" domain="[]" context="{'group_by':'brands_ids'}"/>
                        <filter name="sectors_ids" domain="[]" context="{'group_by':'sectors_ids'}"/>
                        <filter name="industries_ids" domain="[]" context="{'group_by':'industries_ids'}"/>
                        <filter name="threat" domain="[]" context="{'group_by':'threat'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Competitor Form View --> <!-- Checked 01/05/2022 --> <!-- NEEDS REVIEW -->
        <record id="competitor_form" model="ir.ui.view">
            <field name="name">Competitor Form</field>
            <field name="model">crm.competitor</field>
            <field name="arch" type="xml">
                <form string="Competitor Form">
                    <sheet>
                        <field name="logo" widget="image" class="oe_avatar"/>
                        <div class="oe_title">
                            <label for="partner_id"/>
                            <h1>
                                <field name="partner_id" options="{'no_create': True}" attrs="{'readonly': [('id', '!=', False)]}"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="type"/>
                            </group>
                            <group>
                                <field name="threat" widget="priority"/>
                            </group>
                            <group colspan="2">
                                <field name="brands_ids" options="{'no_quick_create': True}" widget="many2many_tags"/>
                                <field name="sectors_ids" widget="many2many_tags" options="{'no_quick_create': True}"/>
                                <field name="industries_ids" widget="many2many_tags" options="{'no_quick_create': True}"/>
                                <field name="notes"/>
                            </group>
                        </group>
                        <hr/>
        <!-- CHECK -->
                        <group string="Related Contacts">
                            <field name="child_contact_ids" widget="one2many" nolabel="1">
                                <tree string="Related Contacts">
                                    <field name="title" optional="show"/>
                                    <field name="name" optional="show" string="Full Name"/>
                                    <field name="company_type" optional="show"/>
                                    <field name="function" optional="show"/>
                                    <field name="mobile" optional="show" class="o_force_ltr"/>
                                    <field name="phone_business" optional="show" class="o_force_ltr"/>
                                    <field name="phone" optional="show" class="o_force_ltr"/>
                                    <field name="status" optional="show" widget="selection"/>
                                </tree>
                            </field>
                        </group>
        <!-- CHECK -->
                        <group string="Related Projects">
                            <field name="competitor_project_ids" widget="one2many" nolabel="1"/>
                        </group>
        <!-- CHECK -->
                        <group string="Related Opportunities">
                            <field name="competitor_opportunity_ids" widget="one2many" nolabel="1"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                    <field name="message_follower_ids" options="{'post_refresh':True}" help="Follow this project to automatically track the events associated to tasks and issues of this project." groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Competitor Kanban View --> <!-- Checked 01/05/2022 --> <!-- NEEDS REVIEW -->
        <record id="competitor_kanban" model="ir.ui.view">
            <field name="name">Competitor Kanban</field>
            <field name="model">crm.competitor</field>
            <field name="arch" type="xml">
                <kanban class="o_crm_competitor_kanban" default_order="sequence">
                    <field name="id"/>
                    <field name="name"/>
                    <field name="sequence"/>
                    <field name="partner_id"/>
                    <field name="logo"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click o_crm_competitor_kanban">
                                <div class="o_kanban_image">
                                    <t t-if="record.logo">
                                        <img t-att-src="kanban_image('crm.competitor', 'logo', record.id.value)" alt="Image"/>
                                    </t>
                                </div>
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open">
                                            <field name="name"/>
                                        </a>
                                    </h4>
                                    <ul>
                                        <li>
                                            <strong>Type:</strong> <field name="type"/>
                                        </li>
                                        <li>
                                            <strong>Threat:</strong> <field name="threat" widget="priority" readonly="1"/>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

