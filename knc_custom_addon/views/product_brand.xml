        <!--  Product Brands - Product Template & Variant Form View --> <!-- Checked 15/05/2022 -->
        <record id="product_brands_product_template_variant_form" model="ir.ui.view">
            <field name="name">Product Brands Form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <field name="detailed_type" position="before">
                    <field name="product_brand_id" options="{'no_open': True, 'no_create': True}"/>
                </field>
            </field>
        </record>

        <!--  Product Brands - Product Template & Variant Search View --> <!-- Checked 15/05/2022 -->
        <record id="product_brands_product_template_variant_search" model="ir.ui.view">
            <field name="name">Product Brands Search</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_search_view"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="product_brand_id"/>
                </field>
                <filter name="type" position="after">
                    <filter name="brand" domain="[]" context="{'group_by':'product_brand_id'}"/>
                </filter>
            </field>
        </record>

