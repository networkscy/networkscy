<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_template_product_datasheet">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="rec">
                <t t-foreach="rec.product_variant_ids" t-as="variant">
                    <t t-call="knc_custom_addon.report_product_datasheet_document">
                        <t t-set="doc" t-value="variant"/>
                    </t>
                </t>
            </t>
        </t>
    </template>

    <record id="action_report_template_product_datasheet" model="ir.actions.report">
        <field name="name">KNC Product Template Datasheet</field>
        <field name="model">product.template</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">knc_custom_addon.report_template_product_datasheet</field>
        <field name="report_file">knc_custom_addon.report_template_product_datasheet</field>
        <field name="print_report_name">object.name + " DataSheet Report"</field>
        <field name="binding_model_id" ref="product.model_product_template"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="base.paperformat_euro"/>
    </record>
    

</odoo>