<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_product_datasheet_document">
        <t t-call="web.external_layout">
            <div class="page">
								
            <!-- Product Details -->
                <div class="row mt16 mb16">

                <!-- 1st Column - Left Side of Page -->
                    <div class="col-5">
                    <!-- Title + Product Reference -->
                        <div class="text-center">
                            <h4><strong><div t-field="doc.default_code"/></strong></h4>
                            <!-- <h6><div t-field="doc.version"/></h6> -->
                            <h6>Version</h6> <!-- Temp -->
                        </div>
                        
                        <hr/>
                        
                    <!-- Product Brand -->
                        <div class="text-center">
                            <!-- <span style="margin-left: auto; margin-right: auto; display: table;">
                                <img t-if="doc.product_brand_id.logo" t-att-src="'data:image/png;base64,%s' % doc.product_brand_id.logo" style="max-height: 120px; max-width: 260px;"/>
                            </span> -->
                            <h6>Brand Logo</h6> <!-- Temp -->
                        </div>
                        
                        <hr/>
                        
                        <!-- Product Image -->
                        <div>
                            <span style="margin-left: auto; margin-right: auto;margin-top:30px;margin-bottom:30px; display: table;">
                                <img class="mt32 mb32" t-if="doc.image_1920" style="max-height: 160px; max-width: 260px;" alt="Image" t-attf-src="data:image/png;base64, #{doc.image_1920}"/>
                            </span>
                        </div>
                        
                        <hr/>

                        <!-- Product Additional Image -->
                        <div>
                            <t t-foreach="doc.product_template_image_ids" t-as="img">
                                <span t-field="img.name" style="margin-left: auto; margin-right: auto; margin-bottom:5px; display: table; max-width: 100px; font-size: 12px;"/>
                                <span style="margin-left: auto; margin-right: auto; display: table; max-width: 100px;">
                                    <img class="mt32 mb32" t-if="img.image_1920" style="max-height: 160px; max-width: 260px;" t-att-src="'data:image/png;base64,%s' % to_text(img.image_1920)"/>
                                </span>
                            </t>
                        </div>

                        <hr/>
                        
                    </div>
                    
                <!-- 2nd Column - Right Side of Page -->
                    <div class="col-7">

                    <!-- Product Name + Attributes -->
                        <div class="text-center">
                            <h4><strong><div t-field="doc.name"/></strong></h4>
                            <h6><span t-esc="', '.join(map(lambda x: (x.name), doc.product_template_variant_value_ids.sorted(key=lambda r: r.attribute_id.sequence)))"/></h6>
                        </div>
                        
                        <hr/>

                    <!-- Variant Attributes & Values -->
                        <div class="col">

                        <!-- Variant Attributes & Values - Title Name -->
                            <div class="row" style="font-size: 12px;">
                                <div class="col-5 text-right" style="padding-left: 6px; padding-right: 6px;">
                                    <strong>Variant</strong>
                                </div>
                                <div class="col-1" style="padding: 0px; margin-left: -10px; margin-right: -10px;">
                                </div>
                                <div class="col-6 text-left" style="padding-left: 6px; padding-right: 6px;">
                                    <strong>Attributes</strong>
                                </div>
                            </div>

                        <!-- Variant Attributes & Values - Data -->
                            <t t-foreach="doc.product_template_attribute_value_ids.sorted(key=lambda r: r.attribute_id.sequence)" t-as="attribute">
                            <!-- Variant Attributes & Values -->
                                <div class="row" style="font-size: 11px;">
                                <!-- Variant Attribute Name -->
                                    <div class="col-5 text-right" style="border-top: 1px solid #ccc; padding-left: 6px; padding-right: 6px;">
                                        <div t-field="attribute.attribute_id.name"/>
                                    </div>
                                    <div class="col-1" style="padding: 0px; margin-left: -10px; margin-right: -10px;">
                                    </div>
                                <!-- Variant Attribute Values -->
                                    <div class="col-6 text-left" style="border-top: 1px solid #ccc; padding-left: 6px; padding-right: 6px;">
                                         <div t-esc="attribute.product_attribute_value_id.dis_name"/>
                                    </div>
                                </div>
                            </t>
                        </div>

                        <hr/>

                        <!-- Product Features Table -->
                        <t t-set="attribute_datas" t-value="doc.get_features()"/>
                        <t t-foreach="attribute_datas" t-as="attribute_data">

                        <!-- Template Attributes & Values -->
                            <div class="col">

                            <!-- Template Attributes & Values - Title Category -->
                                <div class="row" style="font-size: 12px; margin-top: 10px;">
                                    <div class="col-5 text-right" style="padding-left: 6px; padding-right: 6px;">
                                    </div>
                                    <div class="col-1" style="padding: 0px; margin-left: -10px; margin-right: -10px;">
                                    </div>
                                    <div class="col-6 text-left" style="padding-left: 6px; padding-right: 6px;">
                                        <strong><span t-esc="attribute_data['category']"/></strong>
                                    </div>
                                </div>

                            <!-- Template Attributes & Values - Data -->
                                <t t-foreach="attribute_data['lines']" t-as="line">
                                    <div class="row" style="font-size: 11px;">
                                    <!-- Template Attribute Name -->
                                        <div class="col-5 text-right" style="border-top: 1px solid #ccc; padding-left: 6px; padding-right: 6px;">
                                            <div t-field="line.attribute_id.name"/>
                                        </div>
                                        <div class="col-1" style="padding: 0px; margin-left: -10px; margin-right: -10px;">
                                        </div>
                                    <!-- Template Attribute Values -->
                                        <div class="col-6 text-left" style="border-top: 1px solid #ccc; padding-left: 6px; padding-right: 6px;">
                                            <span t-esc="' / '.join(map(lambda x: (x.dis_name), line.value_ids.sorted(key=lambda r: r.attribute_id.sequence)))"/>
                                        </div>
                                    </div>
                                </t>

                            </div>
                        </t>

<!--                        <hr/>-->

<!--                    &lt;!&ndash; Related Attributes & Values &ndash;&gt;-->
<!--                        <div class="col">-->

<!--                        &lt;!&ndash; Related Attributes & Values - Title Name &ndash;&gt;-->
<!--                            <div class="row" style="font-size: 12px;">-->
<!--                                <div class="col-7 text-right">-->
<!--                                    <strong>Related</strong>-->
<!--                                </div>-->
<!--                                <div class="col-5 text-left">-->
<!--                                    <strong>Attributes</strong>-->
<!--                                </div>-->
<!--                            </div>-->

<!--                            <t t-if="attribute_data['related']">-->
<!--                            &lt;!&ndash; Related Attributes & Values - Data &ndash;&gt;-->
<!--                                <t t-foreach="attribute_data['related']" t-as="rel_line">-->
<!--                                    <div class="row" style="font-size: 11px;">-->
<!--                                    &lt;!&ndash; Related Attribute Name &ndash;&gt;-->
<!--                                        <div class="col-7 text-right" style="border-top: 1px solid #ccc;">-->
<!--                                            <div t-field="rel_line.attribute_id.name"/>-->
<!--                                        </div>-->
<!--                                    &lt;!&ndash; Related Attribute Values &ndash;&gt;-->
<!--                                        <div class="col-5" style="border-top: 1px solid #ccc;">-->
<!--                                            <div t-field="rel_line.name"/>-->
<!--                                        </div>-->
<!--                                    </div>-->
<!--                                </t>-->
<!--                            </t>-->
<!--                        </div>-->

                    </div>

                </div>
                                
            </div>
        </t>
    </template>


    <template id="report_product_datasheet">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="knc_custom_addon.report_product_datasheet_document"/>
            </t>
        </t>
    </template>


    <record id="action_report_product_datasheet" model="ir.actions.report">
            <field name="name">KNC Product Variant Datasheet</field>
            <field name="model">product.product</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">knc_custom_addon.report_product_datasheet</field>
            <field name="report_file">knc_custom_addon.report_product_datasheet</field>
            <field name="binding_model_id" ref="product.model_product_product"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="base.paperformat_euro"/>
        </record>
    
</odoo>